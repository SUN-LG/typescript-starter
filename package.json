{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "从零开始构建typescript开发项目",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "changelog": "rimraf CHANGELOG.md && conventional-changelog -p angular -i CHANGELOG.md -s",
    "build": "npm run lint && npm run prettier && rimraf dist types && gulp",
    "lint": "eslint src --max-warnings 0",
    "prettier": "prettier src --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SUN-LG/typescript-starter.git"
  },
  "keywords": [
    "typescript",
    "starter"
  ],
  "files": [
    "dist",
    "types"
  ],
  "author": "SLG",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SUN-LG/typescript-starter/issues"
  },
  "homepage": "https://github.com/SUN-LG/typescript-starter#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "conventional-changelog-cli": "^2.1.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.5",
    "merge2": "^1.4.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
